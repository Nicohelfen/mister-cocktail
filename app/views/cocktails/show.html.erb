<%= simple_form_for([@cocktail, @dose]) do |f| %>

  <%= f.input :description, placeholder: 'Description' %>
  <br>
  <%= f.association :ingredient, placeholder: 'Ingredient'  %>
  <br>
  <%= f.button :submit %>
<% end %>


